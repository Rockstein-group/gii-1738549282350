---
import Seo from "../components/Seo.astro";
import "../styles/global.css";
import MainLayout from "../layouts/MainLayout.astro";
import PhygitalSolutionHeader from "../layouts/solution/PhygitalSolutionHeader.astro";

import Breadcrumb from "../components/Breadcrumb.astro";
import StepOne from "../layouts/solution/StepOne.astro";
import StepTwo from "../layouts/solution/StepTwo.astro";
import StepThree from "../layouts/solution/StepThree.astro";
import StepFour from "../layouts/solution/StepFour.astro";
import StepFive from "../layouts/solution/StepFive.astro";
import StepSix from "../layouts/solution/StepSix.astro";
import ConformiteLoiReen from "../layouts/solution/ConformiteLoiReen.astro";
---

<html lang="en">
  <head>
    <Seo
      seo={{
        title: "Solution - Green It Impact",
        description:
          "Green IT Impact : déployez une stratégie numérique responsable avec notre solution phygitale, alliant innovation, durabilité et conformité à la loi REEN",
        keywords: "",
        canonical: "https://gii-1739185640811.ecobuilder.io/",
        image:
          "https://gii-1739185640811.ecobuilder.io/images/gii_logo_seo.webp",
        type: "website",
        themeColor: "#ffffff",
      }}
    />
    <meta charset="utf-8" />
    <link rel="icon" type="image/x-icon" href="/favicons/gii_logo_seo.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Solution - Green It Impact</title>
  </head>
  <MainLayout>
    <div class="flex w-full flex-col justify-center mx-auto">
      <Breadcrumb
        mainPage="accueil"
        subPage="solution"
        mainLink="/"
        subLink="/solution"
      />
    </div>
    <section
      class="main-component flex flex-col text-white bg-white gap-12"
      aria-label="Phygital Solution Section"
    >
      <div
        class="max-xl:px-4 max-md:max-w-full flex w-full flex-col justify-center max-w-screen-2xl mx-auto"
      >
        <PhygitalSolutionHeader />
      </div>
      <div class="max-xl:px-4 container mx-auto">
        <p class="text-[36px] font-semibold text-[#243544] my-12">
          LES 6 ÉTAPES DE LA MÉTHODOLOGIE GREEN IT IMPACT...
        </p>
      </div>
      <div class="2xl:container w-full mx-auto gap-24 flex flex-col">
        <StepOne />
        <StepTwo />
        <StepThree />
        <StepFour />
        <StepFive />
        <div
          class="max-xl:px-4 max-md:max-w-full flex w-full flex-col justify-center max-w-screen-2xl mx-auto"
        >
          <StepSix />
        </div>
      </div>
      <ConformiteLoiReen />
    </section>
  </MainLayout>
</html>
